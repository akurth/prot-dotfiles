tempus_git_ssh_url="git@gitlab.com:protesilaos"
tempus_base_repo=tempus-themes
tempus_repos=(generator gtksourceview3 kitty konsole st tilix urxvt utils vim xfce4-terminal xterm)

# shallow clone main repo (because it has pictures)
git clone $tempus_git_ssh_url/$tempus_base_repo --depth 1

# clone all the other repos
for i in ${tempus_repos[*]}; do
    git clone $tempus_git_ssh_url/$tempus_base_repo-$i
done
